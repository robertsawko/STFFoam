FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      funkySetFieldsDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
expressions
(
	initZero
	{
		field alpha.air;
		create false;
		expression "0";
		keepPatches true ;
	}
	setBubble
	{
		field       alpha.air ;
		expression  "1" ;
		keepPatches true ;
                condition   "mag(pos() - vector(0.007, 0, 0))<0.0005";
	}
);
