FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

#include "blockMeshDict.cfg"

half_width  #calc "$width / 2";
mhalf_width #calc "-$half_width";

nl #calc "floor(0.01 / $width * $nside)";

vertices        
(
    (0       $mhalf_width $mhalf_width) //0
    ($height $mhalf_width $mhalf_width) //1
    ($height  $half_width $mhalf_width) //2
    (0        $half_width $mhalf_width) //3
    (0       $mhalf_width  $half_width) //4
    ($height $mhalf_width  $half_width) //5
    ($height  $half_width  $half_width) //6
    (0        $half_width  $half_width) //7
);

blocks          
(
    hex (0 1 2 3 4 5 6 7) (64 $nside $nside) simpleGrading (1 1 1)
);

edges           
(
);

boundary
(
    left
    {
	    type patch;
	    //neighbourPatch right;
	    faces
	    (
	     (0 4 5 1)
	    );
    }
    right
    {
	    type patch;
	    //neighbourPatch left;
	    faces
	    (
	     (2 6 7 3)
	    );
    }

    front
    {
	    type patch;
	    faces
	    (
		(0 1 2 3)
	    );
    }

    back
    {
	    type patch;
	    faces
	    (
		(4 5 6 7)
	    );
    }
    bottom 
    {
	    type patch;
	    faces
	    (
		(0 3 7 4)
	    );
    }
    top 
    {
	    type patch;
	    faces
	    (
		(1 2 6 5)
	    );
    })

mergePatchPairs
(
);

